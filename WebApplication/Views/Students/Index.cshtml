@model IEnumerable<WebApplication.Data.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>
<h4>@ViewBag.GroupName</h4>
<a asp-controller="Students" asp-action="RedirectToGroupsList" asp-route-groupId="@Context.Request.Query["groupId"]" >Back to Groups</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-studentId="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-studentId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

