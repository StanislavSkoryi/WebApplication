@model WebApplication.Data.Entities.Group

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Group @Html.DisplayFor(model => model.Name)</h4>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-controller="Groups" asp-action="Index" asp-route-courseId="@Model.CourseId">Back to Groups</a>
</div>
