@model WebApplication.Data.Entities.Group

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Group</label>
                <div> @Html.DropDownList("CourseId", (ViewBag.CoursesList as IEnumerable<SelectListItem>), new { @class = "form-control" }) </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <a asp-controller="Courses" asp-action="Index">Back to Courses</a>
        </form>
    </div>
</div>
